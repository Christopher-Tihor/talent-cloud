{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vitest/globals",
      "cypress",
      "node",
      "cypress-file-upload",
      "@testing-library/cypress"
    ],
    "baseUrl": "./",
    "paths": {
      "@": ["src"],
      "test": ["test"],
      "test/*": ["test/*"],
      "@/*": ["src/*"],
      "~/*": ["node_modules/*"]
    }
  },
  "include": [
    "src",
    "src/**/*",
    "src/**/*.tsx",
    "vite/client",
    "cypress.d.ts",
    "cypress/components/Dashboard.cy.tsx",
    "cypress/components/Loading.cy.tsx",
    "cypress/components/NotFound.cy.tsx",
    "cypress/components/Profile.cy.tsx",
    "cypress/components/AppHealth.cy.tsx",
    "cypress/components/RoutesComponent.cy.tsx"
  ],

  "references": [{ "path": "./tsconfig.node.json" }]
}
